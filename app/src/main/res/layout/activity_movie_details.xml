<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".movieDetails" android:orientation="vertical">
    <ImageView
            android:layout_width="126dp"
            app:srcCompat="@drawable/filmicon" android:id="@+id/imageView"
            android:layout_height="74dp" android:layout_gravity="center_vertical|center"/>
    <TextView
            android:text="Title:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="61dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/textView10"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="80dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/nameView" android:textSize="20sp"/>
    <TextView
            android:text="Overview:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="135dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/textView12"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="154dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/descView" android:textSize="20sp"/>
    <TextView
            android:text="Reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView5"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/linear">
        <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" android:id="@+id/addReview"-->
                <!--android:text="No Reviews Yet \n Long press here to add your review."/>-->
    </LinearLayout>
    <TextView
            android:text="Language:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="246dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/textView14"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="265dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/languageView" android:textSize="20sp"/>
    <TextView
            android:text="Release Date:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="317dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/textView16"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="336dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/dateView" android:textSize="20sp"/>
    <TextView
            android:text="Suitable for children below 13:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="385dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/textView18"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="404dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/suitableView" android:textSize="20sp"/>

</LinearLayout>